@page
@model Esport.Pages.DeleteGameModel

@{
    ViewData["Title"] = "Delete Game";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this? This will also remove all tournaments with this game and can not be undone!</h3>
<div>
    <h4>Producer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt class = "col-sm-2">
            Genre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Game.Genre)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Game.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="/Games/Index">Back to List</a>
    </form>
</div>
