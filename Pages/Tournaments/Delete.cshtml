@page
@model Esport.Pages.DeleteTournamentModel

@{
    ViewData["Title"] = "Delete Tournament";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this? This can not be undone!</h3>
<div>
    <h4>Producer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tournament.Name)
        </dd>
        <dt class = "col-sm-2">
            Game
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tournament.Game.Name)
        </dd>
        <dt class = "col-sm-2">
            Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tournament.Date)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Tournament.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="/Tournaments/Index">Back to List</a>
    </form>
</div>
